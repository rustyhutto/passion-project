<div class="container checklist-show">
  <h4>Name: <%= @checklist.list_name %></h4>
  <p></p>
  <h4>Location: <%= @checklist.location %></h4>
  <p></p>
  <h4>Date: <%= @checklist.datetime %></h4>
  <p></p>
  <p><a href="/checklists/<%= @checklist.id %>/edit">Edit</a> the checklist</p>

  <p>Add a new <a href="/checklists/<%= @checklist.id %>/sightings/new">sighting</a></p>

  <!-- list of all sightings for the checklist -->

  <div>
    <form id="Delete checklist" action="/checklists/<%= @checklist.id%>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" class="btn-default" value="Delete">
    </form>
  </div>

</div>
<br>
<br>
<div class="container checklist-show">
  <h4>Sightings</h4>
    <table class="table">
    <tr>
      <th>Species</th>
      <th>Count</th>
      <th>Sighting</th>
    </tr>
      <% @checklist.sightings.each do |sighting| %>
        <tr>
         <td><%= sighting.species %></td>
         <td><%= sighting.count %></td>
         <td><a href="/checklists/<%= @checklist.id %>/sightings/<%= sighting.id %>">View</a></td>
      <% end %>
    </table>
</div>
